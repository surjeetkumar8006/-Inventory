
<div class="modal py-5" tabindex="-1" role="dialog" id="modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow bg-success">
      <div class="modal-header border-bottom-0">
        <h1 class="modal-title fs-5 text-white" id="modal-title">Modal title</h1>
        <button type="button" class="btn-close text-white" onclick="closeModal()" aria-label="Close"></button>
      </div>
      <div class="modal-body py-0">
        <p class="text-white" id="modal-msg">This is a modal sheet, a variation of the modal that docs itself to the bottom of the viewport like the newer share sheets in iOS.</p>
      </div>
      <div class="modal-footer flex-column border-top-0">
        <button type="button" class="btn btn-lg btn-dark w-100 mx-0 mb-2" onclick="closeModal()">Got it!</button>
      </div>
    </div>
  </div>
</div>

<script>
     function closeModal(){
        document.getElementById('modal').classList.remove('d-block')
        document.getElementById('modal-title').textContent = ''
        document.getElementById('modal-msg').textContent = ''
    }
</script>