<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/header.ejs') -%>
<body class="bg-light">
    <%- include('../../partials/nav.ejs') -%>

    <div class="container">
        <div class="row">
           <div class="d-flex justify-content-between align-items-center">
             <h3 class="p-3 mx-3">Inventory</h3>
             <a href="/inventory"class="btn btn-sm btn-info text-white">Back</a>
           </div>
              <div class="col-lg-4 mx-auto">
                <div class="card">
                    <h3 class="fw-bold p-3">Add new Product Category</h3>
                    <div class="row p-3">
                      <form id="form">

                          <div class="colg-lg-12 mb-3">
                                <div class="category text-start text-error"></div>
                                <div class="form-floating mb-2">
                                    <input type="text" class="form-control"  placeholder="name" name="category">
                                    <label for="">Category name</label>
                                </div>
                          </div>

                          <div class="col-lg-12">
                            <button class="btn btn-primary btn-lg text-white">Save</button>
                          </div>
                      </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../partials/modal.ejs') -%>
    <%- include('../../partials/footer.ejs') -%>
</body>
<script>

    const form = document.querySelector('#form')

    form.addEventListener('submit', async (e) => {
        e.preventDefault()

        const categoryError = document.querySelector('.category.text-error')
        categoryError.textContent = ''
        const category = form.category.value
      

        Array.from(form.elements).forEach(el => el.disabled = true)
        
        try {
            const res = await fetch('/category/store',{
                method: 'POST',
                body: JSON.stringify({category}),
                headers: { 'Content-type': 'application/json' }
            })

            const data = await res.json()

            Array.from(form.elements).forEach(el => el.disabled = false)

            if(data.category){
                form.reset()

                  msgAlert('System message','Category has been Successfully created!')
            }
            if(data.errors){
                categoryError.textContent = data.errors.category
            }

        } catch (error) {
            console.log(error)
        }
    })
</script>
</html>